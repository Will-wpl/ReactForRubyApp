.u-text-center.u-mb3
  = image_tag 'logo-railsbase.png', alt: 'railsbase-logo', class: 'devise-logo'
  
div.col-sm-12.col-md-6.push-md-3.registration
  h4 Choose an account type
  div.u-grid 
    div.col-sm-12.col-md-6
        a.retailer onclick="registration.show_registration('retailer_registration')" Retailer
    div.col-sm-12.col-md-6
        a.buyer onclick="registration.show_registration('buy_registration_choose')" Buyer

.u-grid.u-mb3 id="retailer_registration"
  .col-sm-12.col-md-8.u-mha
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
      wrapper: :vertical_form,id:'registration_form', defaults: { label: false }) do |f|
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label * Email
        .lm--formItem-right.lm--formItem-control
          = f.input :email,required:true,id:'retailer_email'
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label * Password (Minimum 8 characters)
        .lm--formItem-right.lm--formItem-control
          = f.input :password,required:true,id:'retailer_password',placeholder: 'Password (Minimum 8 characters)'
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label * Password Confirmation
        .lm--formItem-right.lm--formItem-control
          = f.input :password_confirmation,required:true,id:'retailer_password_confirmation'
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label 
          font Company Information:
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label * Company Name
        .lm--formItem-right.lm--formItem-control
          = f.input :company_name,required:true,autofocus: true,id:'retailer_company_name'
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label * Company Address
        .lm--formItem-right.lm--formItem-control
          = f.input :company_address,required:true,id:'retailer_company_address'
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label * Unique Entity Number (UEN)
        .lm--formItem-right.lm--formItem-control
          = f.input :company_unique_entity_number,required:true,id:'retailer_entity_number'
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label * Retailer Licence Number
        .lm--formItem-right.lm--formItem-control
          = f.input :company_license_number,required:true,id:'retailer_licence_number'
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label 
          font Contact Information:
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label * Contact Name
        .lm--formItem-right.lm--formItem-control
          = f.input :name,required:true,id:'retailer_contact_name'
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label * Mobile Number
        .lm--formItem-right.lm--formItem-control
          = f.input :account_mobile_number,required:true,id:'retailer_mobile_number'
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label * Office Number
        .lm--formItem-right.lm--formItem-control
          = f.input :account_office_number,required:true,id:'retailer_office_number'
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label
        .lm--formItem-right.lm--formItem-control
          = f.button :submit, 'Sign Up', class: 'lm--button--primary u-block', data: { disable_with: t('views.disable_with') }
      .lm--formItem.u-text-center
        | Have an Account? #{link_to 'Log In', new_user_session_path}


.u-grid.u-mb3 id="buy_registration_choose"
  .col-sm-12.col-md-8.u-mha
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label Consumer Type
        .lm--formItem-right.lm--formItem-control
          select id='buyer_type'
            option value="company" Company
            option value="individual" Individual
      .lm--formItem.lm--formItem--inline.string.optional
        .lm--formItem-left.lm--formItem-label
        .lm--formItem-right.lm--formItem-control
          button.lm--button.lm--button--primary.u-block id='buyer_type_btn' onclick="registration.choose_buy_type()" Sign Up
      .lm--formItem.u-text-center
        | Have an Account? #{link_to 'Log In', new_user_session_path}



