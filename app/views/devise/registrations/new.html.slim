          .lm--formItem-right.lm--formItem-control
            = f.input :remember_me,required:true,id:'buyer_company_mobile_number'
        .lm--formItem.lm--formItem--inline.string.optional
          .lm--formItem-left.lm--formItem-label * Office Number
          .lm--formItem-right.lm--formItem-control
            = f.input :remember_me,required:true,id:'buyer_company_office_number'
        .lm--formItem.lm--formItem--inline.string.optional
          .lm--formItem-left.lm--formItem-label
          .lm--formItem-right.lm--formItem-control
            = f.button :submit, 'Sign Up', class: 'lm--button--primary u-block', data: { disable_with: t('views.disable_with') }
        .lm--formItem.u-text-center
          | Have an Account? #{link_to 'Log In', new_user_session_path}


