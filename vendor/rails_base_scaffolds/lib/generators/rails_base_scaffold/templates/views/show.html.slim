.page-header
  .pull-right
    = link_to edit_<%= singular_resource_path %>_path(@<%= singular_table_name %>), class: "btn btn-warning" do
      = icon "edit", t("views.actions.edit")
    ' &nbsp;
    = link_to <%= singular_resource_path %>_path(@<%= singular_table_name %>), class: "btn btn-danger", method: :delete, data: { confirm: t('views.confirm'), disable_with: t('views.disable_with') } do
      = icon "trash", t("views.actions.destroy")
  h1= page_title(model: <%= class_name %>.model_name.human)

dl.dl-horizontal
  - @<%= singular_table_name %>.attributes.each do |name, value|
    dt.attribute-label
      = t("labels.<%= singular_table_name %>.#{name}", default: name.titleize)
    dd.attribute-data
      = value
