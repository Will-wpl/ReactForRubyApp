.page-header
  .pull-right
    = link_to icon("plus", t("views.actions.new", model: <%= class_name %>.model_name.human)), new_<%= singular_resource_path %>_path, class: "btn btn-primary"
  h1= page_title(model: <%= class_name %>.model_name.human.pluralize)

table.table.table-hover
  thead
    tr
      th id
      th
  tbody
    - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
      tr
        td= link_to <%= singular_table_name %>.id, <%= singular_resource_path %>_path(<%= singular_table_name %>)
        td.text-right
          = link_to <%= singular_resource_path %>_path(<%= singular_table_name %>), class: "btn btn-success btn-sm" do
            = icon "eye", t("views.actions.show")
          ' &nbsp;
          = link_to edit_<%= singular_resource_path %>_path(<%= singular_table_name %>), class: "btn btn-warning btn-sm" do
            = icon "edit", t("views.actions.edit")
          ' &nbsp;
          = link_to <%= singular_resource_path %>_path(<%= singular_table_name %>), class: "btn btn-danger btn-sm", method: :delete, data: { confirm: t('views.confirm'), disable_with: t('views.disable_with') } do
            = icon "trash", t("views.actions.destroy")

hr

.row
  .col-sm-6
    = page_entries_info @<%= plural_table_name %>, entry_name: <%= class_name %>.model_name.human
  .col-sm-6
    = paginate(@<%= plural_table_name %>)
